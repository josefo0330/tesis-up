    <%- include('partial/navigation.html'); -%>
    <div id="contener" align='center'>
        
        <div class="card animated flipInY animate__animated animate__backInUp">
            <div class=" card-header bg-dark text-white">
                <h2 class="text-center">ANALISIS DE DATOS</h2><br>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="formFileSm" class="form-label">Lista Preliminar de Estudiantes CRUV  </label>
                    <input class="form-control form-control-sm"type="file" name="listaP" id="listaP">
