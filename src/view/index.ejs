            </div>
        </div>

</div>
    </div>
    <%- include('partial/footer.html'); -%>
    <script src="/js/js.js"></script>
    <script src="main.js"></script>

<script>
    $('#listaD').change(function(e){
        var file= e.target.files[0]
        var formData= new FormData();
        
        formData.append("myFile1", file)
        $.ajax({
            url: "/api/products/file1",
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            crossDomain: true
        }).done(function() {
            $("#doneListaD").html('Cargado correctamente<i class="bi bi-check-circle-fill"></i>')
      });
    })
    $('#listaP').change(function(e){
        var file= e.target.files[0]
        var formData= new FormData();
        
        formData.append("myFile2", file)
        $.ajax({
            url: "/api/products/file2",
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            crossDomain: true
        }).done(function() {
            $("#doneListaP").html('Cargado correctamente<i class="bi bi-check-circle-fill"></i>')
      });
    })
</script>
